-- 4strxl spamz - GUI FORCE LOAD TEST (FINAL)

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- HARD WAIT
while not LocalPlayer do
    Players.PlayerAdded:Wait()
    LocalPlayer = Players.LocalPlayer
end

local PlayerGui = LocalPlayer:WaitForChild("PlayerGui", 10)
if not PlayerGui then return end

-- DESTROY OLD
pcall(function()
    if PlayerGui:FindFirstChild("4strxl_spamz_gui") then
        PlayerGui["4strxl_spamz_gui"]:Destroy()
    end
end)

-- SCREEN GUI
local gui = Instance.new("ScreenGui")
gui.Name = "4strxl_spamz_gui"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = PlayerGui

-- MAIN FRAME
local frame = Instance.new("Frame")
frame.Size = UDim2.fromOffset(320, 200)
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.Position = UDim2.fromScale(0.5, 0.5)
frame.BackgroundColor3 = Color3.fromRGB(190, 160, 255) -- light purple
frame.BorderSizePixel = 0
frame.Parent = gui

Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 16)

-- TITLE
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.BackgroundTransparency = 1
title.Text = "4strxl spamz"
title.Font = Enum.Font.GothamBold
title.TextSize = 26
title.TextColor3 = Color3.fromRGB(20, 20, 20)
title.Parent = frame

-- BODY TEXT
local body = Instance.new("TextLabel")
body.Position = UDim2.fromOffset(0, 60)
body.Size = UDim2.new(1, 0, 1, -60)
body.BackgroundTransparency = 1
body.TextWrapped = true
body.Text = "If you can see this panel,\nYOUR EXECUTOR SUPPORTS GUIs."
body.Font = Enum.Font.Gotham
body.TextSize = 16
body.TextColor3 = Color3.fromRGB(30, 30, 30)
body.Parent = frame

-- FORCE VISIBILITY EVERY FRAME
RunService.RenderStepped:Connect(function()
    if gui.Parent ~= PlayerGui then
        gui.Parent = PlayerGui
    end
    frame.Visible = true
end)
